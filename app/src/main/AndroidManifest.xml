<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wastemgmtapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/waste_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/waste_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WasteMgmtApp">
        <activity android:name=".Staff.RequestDetailsActivity"></activity>
        <activity android:name=".Staff.TrashDetailsActivity" />
        <activity android:name=".Staff.CollectionRequests" />
        <activity android:name=".Staff.ZoneTrashcans" />
        <activity android:name=".normalUser.ReportDumping" />
        <activity android:name=".normalUser.ReviewArea" />
        <activity android:name=".normalUser.RecordWaste" />
        <activity android:name=".normalUser.RequestCollection" />
        <activity android:name=".Staff.StaffHomeActivity" />
        <activity
            android:name=".normalUser.UserHomeActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
        <activity
            android:name=".Common.LogInActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".normalUser.UserSignUpActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
        <activity
            android:name=".Common.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
    </application>

</manifest>